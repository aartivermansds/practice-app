<%= form_for :create_news_comments, url: :comments_create_news_comments, method: 'post' do |f| %>

  <%= f.hidden_field :news_id, value: @news.id %>

  <div class="form-group">
    <%= f.label :post_a_comment %>
    <%= f.text_area :comment_body, class: "form-control", rows: "7" %>
  </div>

  <div class="form-group">
    <%= f.label :Commenter %>
    <%= f.text_field :commenter, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Post Your Comment Now", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>