<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>description</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>				
				<td><%= book.name %></td>
				<td><%= book.description %></td>
				<td>
					<%= link_to "show",book_path(book) %>
				</td>
				<td>
					<%= link_to "delete",book_path(book),method: :delete, :data =>{:confirm =>"Are you sure you want to delete this ?"} %>
				</td>
				<td>
					<%= link_to "edit",edit_book_path(book) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "create",new_book_path %>