<%= form_for @author do |f| %>
	<div>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :email %><br>
		<%= f.email_field :email %>
	</div>
	<div>
		<%= f.label :contact %><br>
		<%= f.text_field :contact %>
	</div>
	<div>
		<%= f.label :address %><br>
		<%= f.text_area :address%>
	</div>
	<div>
		<%= f.submit  %>
	</div>
<% end %>