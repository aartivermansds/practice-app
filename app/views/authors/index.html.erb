<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Address</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>        
        <td><%= author.name %></td>
        <td><%= author.email %></td>
        <td><%= author.contact %></td>
        <td><%= author.address %></td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to "show",author_path(author), class: "btn btn-info" %>
            <%= link_to "delete",author_path(author),method: :delete, :data =>{:confirm =>"Are you sure you want to delete this author?"}, class: "btn btn-danger" %>
            <%= link_to "edit",edit_author_path(author), class: "btn btn-warning" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "create",new_author_path %>